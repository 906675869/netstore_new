<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.parent.xtgl.mapper.UserMapper" >

    <resultMap id="BaseResultMap" type="com.parent.xtgl.entity.User" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
        <result column="address" property="address" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List" >
        user.id, user.name, user.age, user.address
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM user
    </select>

    <select id="getOne" parameterType="java.lang.Integer" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM user
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.parent.xtgl.entity.User" >
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO
        user
        (id,name,age,address)
        VALUES
        (#{id},#{name}, #{age}, #{address})
    </insert>

    <update id="update" parameterType="com.parent.xtgl.entity.User" >
        UPDATE
        user
        SET
        <if test="name != null">name = #{name},</if>
        <if test="age != null">age = #{age},</if>
        address = #{address}
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer" >
        DELETE FROM
        user
        WHERE
        id =#{id}
    </delete>

    <select id="selectUserByLoginName" parameterType="com.parent.xtgl.entity.Login" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM
        user
        LEFT JOIN login on login.usrid = user.id
        WHERE
        login.loginName = #{loginname} and login.password = #{password}
    </select>
</mapper>